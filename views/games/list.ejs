<% layout('layout') -%>
<div class="d-flex justify-content-between align-items-center mb-3">
<h3>Games</h3>
<% if (user.role === 'teacher' || user.role === 'admin') { %>
<a class="btn btn-success" href="/games/create/new">Add Game</a>
<% } %>
</div>
<div class="row g-3">
<% games.forEach(g=>{ %>
<div class="col-md-6">
<div class="card h-100">
<div class="card-body">
<h5><%= g.title %></h5>
<p class="text-muted"><%= g.description %></p>
<div class="ratio ratio-16x9">
<iframe src="<%= g.url %>" allowfullscreen></iframe>
</div>
</div>
</div>
</div>
<% }) %>
</div>